<Window x:Class="Uvon_Desktop.ControlPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uvon_Desktop"
        mc:Ignorable="d"
        Title="ControlPanel" Height="450" Width="800" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Horizontal" Margin="15">
        <StackPanel Orientation="Vertical" Margin="15" Width="360">
            <Image Height="263" Width="348" Name="imagesource"/>
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button Name="uv" Content="Turn on UV" Grid.Column="0" Grid.Row="0" Foreground="Violet" Width="100" Height="20" Margin="30,0,30,0" Grid.RowSpan="2" VerticalAlignment="Top" Click="uv_Click"/>
                <Button Name="disconnect" Content="Disconnect" Grid.Column="1" Grid.Row="0" Foreground="Red" Width="100" Click="disconnect_Click"/>
            </Grid>
        </StackPanel>
        <Grid Margin="20" Width="322" Height="274">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Button Name="Left" Content="Left" Grid.Column="0" Grid.Row="1" Height="80" Width="80" Click="Left_Click"/>
            <Button Name="Stop" Content="Stop" Grid.Column="1" Grid.Row="1" Height="80" Width="80" Click="Stop_Click"/>
            <Button Name="Right" Content="Right" Grid.Column="2" Grid.Row="1" Height="80" Width="80" Click="Right_Click"/>
            <Button Name="Go" Content="Go" Grid.Column="1" Grid.Row="0" Height="80" Width="80" Click="Go_Click"/>
            <Button Name="Back" Content="Back" Grid.Column="1" Grid.Row="2" Height="80" Width="80" Click="Back_Click"/>

        </Grid>
    </StackPanel>
</Window>